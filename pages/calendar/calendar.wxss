/* pages/calendar/calendar.wxss */
/* ... (保留所有原有样式) */
.custom-nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #F3CACD; /* 与主题色一致 */
  z-index: 1000;
  height: 44px; /* 标准导航栏内容高度 */
  display: flex;
  align-items: center;
  justify-content: center;
}
.nav-title {
  color: black;
  font-family: "Microsoft YaHei", "微软雅黑", sans-serif; /* 需求3：设置字体 */
  font-size: 18px; /* 需求3：比默认的16px或17px大一号 */
  font-weight: 500;
}



.container { 
  padding: 20rpx;
  padding-top: 35rpx;
}
.white-box {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(207, 160, 165, 0.1);
}

.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 10rpx 20rpx;
}

.nav-control {
  display: flex;
  align-items: center;
  color: #888;
  font-size: 28rpx;
}

.nav-icon {
  width: 24rpx;
  height: 24rpx;
  margin: 0 10rpx;
}

/* 【修改】为月份显示增加可点击手势 */
.current-month {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  padding: 10rpx 20rpx; /* 增加点击区域 */
  border-radius: 10rpx;
}
.current-month:active {
  background-color: #f0f0f0;
}

.calendar .header, .calendar .days { display: flex; flex-wrap: wrap; }
.calendar .header view, .calendar .days .day-item { width: calc(100% / 7); text-align: center; padding: 10rpx 0; }

.day-item {
  position: relative; /* 作为绝对定位的容器 */
  height: 80rpx;
  display: flex; /* 使用flex布局让数字居中 */
  justify-content: center;
  align-items: center;
  width: calc(100% / 7);
  cursor: pointer;
}
.record-icon-bg {
  position: absolute; /* 绝对定位，脱离文档流 */
  width: 90rpx;
  height: 90rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%); /* 精确居中 */
  opacity: 1; /* 调低透明度，作为背景 */
  z-index: 0; /* 确保在数字下方 */
}
.day-number {
  position: relative; /* 提升层级，确保在图标上方 */
  z-index: 1;
  font-size: 28rpx;
}

.empty { visibility: hidden; }
.record-list { margin-top: 40rpx; }


.list-header, .list-item { display: flex; justify-content: space-between; padding: 18rpx 0; border-bottom: 1rpx solid #f3eae8; }
/* 给列表项添加可点击手势 */
.list-item { cursor: pointer; }
.list-item { color: #555; }
.list-item:last-child { border-bottom: none; }
.list-item:active { background-color: #f9f9f9; }
.list-header { font-weight: bold; color: #333;padding-top: 0rpx; }
.list-header view, .list-item view { flex: 1; text-align: center; font-size: 26rpx; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }

.no-record { text-align: center; color: #999; padding: 40rpx; }



/* 去除默认点击态 */
.day-item,
.list-item {
  -webkit-tap-highlight-color: transparent;
  user-select: none;
}
.day-item.active,
.list-item.active {
  background-color: #141414 !important;
  transition: background-color 10s;
}


/* 【新增】弹窗关闭按钮的点击反馈 */
.modal-close:active {
  background-color: #f0f0f0; /* 使用稍暗的颜色以示区分 */
}

.add-btn::after {
  display: none !important;
  border: none !important;
}

.add-btn {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 125rpx !important;
  height: 125rpx !important;
  border-radius: 50% !important; /* 关键：正圆形 */
  box-sizing: border-box;
  background-color: #CFA0A5;
  color: white;
  font-size: 60rpx;
  /* 关键：使用flex布局确保"+"号绝对居中 */
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  margin: 0;
  border: none;
  min-width: 0 !important;
  min-height: 0 !important;
  line-height: 1;
  box-shadow: 0 4rpx 12rpx rgba(207, 160, 165, 0.4);
}


.modal-mask { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 10; }
.modal-dialog { position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 85%; background: #fff; border-radius: 10rpx; z-index: 20; padding: 30rpx; box-sizing: border-box; }
.modal-title { text-align: center; font-size: 32rpx; font-weight: bold; margin-bottom: 20rpx; }
.form-item { display: flex; align-items: center; margin-bottom: 20rpx; font-size: 28rpx; }
.form-item label { width: 120rpx; }
.form-item input, .form-item textarea, .picker-display { flex: 1; border: 1rpx solid #eee; padding: 10rpx; border-radius: 5rpx; }
.form-item textarea { height: 100rpx; }
/* 【新增】日期选择器显示样式 */
.picker-display { box-sizing: border-box; }

/* 【新增】右上角关闭按钮样式 */
.modal-close {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%; /* 改为圆形，更美观 */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

/* 【修改】底部按钮布局 */
.modal-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}
/* 【新增】保存按钮样式 */
.btn-save {
  width: 45%;
  background-color: #F3CACD;
  color: white;
  margin: 0;
  /*transition: background-color 0.3s;  增加颜色过渡动画 */
}
/* 【新增】【需求3】保存按钮变色样式 */
.btn-save.dirty {
  background-color: #e0807f; /* 变为红色 */
}

/* 【新增】删除按钮样式 */
.btn-delete {
  width: 45%;
  background-color: rgb(196, 195, 195);
  color: white;
  margin: 0;
}